                    .form-group
                      %label Варианты товара
                      .form-block-group
                        .form-group
                          %a.products__new-form-variant-type-btn.active{role: 'products__new-form-variant-type-btn'} Размер
                          %a.products__new-form-variant-type-btn{role: 'products__new-form-variant-type-btn'} Цвет
                          %input.products__new-form-custom-variant-input{type: "text", placeholder: 'Другое', role: 'products__new-form-variant-type-input'}
                        .row
                          .col-md-11
                            .row.row-block-padding
                              .col-sm-4.hidden-xs
                                %label{role: 'products__new-form-variant-type-label'} Размер
                              .col-sm-4.hidden-xs
                                %label Количество
                              .col-sm-4.hidden-xs
                                %label Артикул

                        .row{role: 'products__new-form-variants-item'}
                          .col-md-12
                          .col-md-11
                            .row.row-block-padding
                              .col-sm-4
                                %label.hidden-sm.hidden-md.hidden-lg Размер
                                %input.form-control{type: "text", placeholder: 'Например, XL'}
                              .col-sm-4
                                %label.hidden-sm.hidden-md.hidden-lg Количество
                                %input.form-control{type: "text", placeholder: 'Например, 5'}
                              .col-sm-4
                                %label.hidden-sm.hidden-md.hidden-lg Артикул
                                %input.form-control{type: "text", placeholder: 'Например, M001-11-00'}
                            %br
                          .col-md-1
                            %a.products__new-form-remove-variant-btn.pull-right
                            .clearfix
                        .row{role: 'products__new-form-variants-place'}

                        .form-group
                          -#input.btn.form-control{type: "text", placeholder: 'Добавить размеры и цвета'}
