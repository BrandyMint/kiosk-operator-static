                          .products__new-form-image-thumb-update
                        .products__new-form-image-thumb-block
                          %img.products__new-form-image-thumb{src: "assets/product-2-square.png", alt: ""}
                          .products__new-form-image-thumb-remove
                          .products__new-form-image-thumb-update
                    .form-group
                      %label Название товара
                      %textarea.form-control.form-control-text-large{placeholder: 'Например, велосипед городской'}
                    .row
                      .col-sm-6
                        .form-group
                          %label Бренд
                          %input.form-control{type: "text", placeholder: 'Бренд'}
                      .col-sm-6
                        .form-group
                          %label Цена
                          %input.form-control{type: "text", placeholder: '20 000'}
                      .col-sm-6
                        .form-group
                          %label Категория
                          %div( data-react-class="SuperSelect" data-react-props='{"name": "category_name", "value": "Кефир", "options":["Молоко", "Морепродукты", "Мопеды", "Брилианты", "Категория 2"]}')
                      .col-sm-6
                        .form-group
                          %label Подкатегория
