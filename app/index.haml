!!! 5
%html
  %head
    @@include('./shared/_head.haml')
  %body
    .navbar-transparent
      .container
        .login__navbar-logo-block
          .login__navbar-logo
    .login__content.login__content--fullscreen
      .login__block
        -#.alert.alert-danger
        %form.login__form
          .login__form-header Создание магазина
          %input.login__form-input{:placeholder => "Введите название магазина", :required => "", :type => "text"}
          %input.login__form-input{:placeholder => "Емэйл", :required => "", :type => "email"}
          %input.login__form-input{:placeholder => "Придумайте пароль", :required => "", :type => "password"}
          .login__form-actions
            %button.login__form-submit-btn Создать магазин

        %p.color-text-light
          Уже есть магазин?
          %a{href: '#/registration'}
            %strong Войти

